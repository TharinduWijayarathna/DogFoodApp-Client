<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Twice" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Twice" parent="Base.Theme.Twice">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/btn_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/orange</item>

        <item name="android:navigationMode">@color/black</item>
    </style>

    <style name="ThemeOverlay.Twice.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.Twice.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Twice.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Twice.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>